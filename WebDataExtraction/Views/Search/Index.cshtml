@model List<Scrapper.Restaurant>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Index";
}

<h2><i class="fa fa-group"></i>Search Restaurents in any Location</h2>

<div class="row row-margin">
    <div class="alert alert-warning fade in" role="alert" id="message">
        <div id="message-text"></div>
    </div>
    <div class="col-lg-9 col-md-9 col-sm-12 co-xs-12 col-lg-offset-2 col-md-offset-2">
        <form class="form-inline" method="post" id="searchForm">
            <div class="form-group">
                <input type="text" class="form-control" id="nameToken" placeholder="Restaurent's Name" required="required">
            </div>
            <div class="form-group">
                <input type="text" class="form-control" id="location" placeholder="Location" required="required">
            </div>
            <button type="submit" class="btn btn-success" id="submit">Search</button>
            <button type="button" class="btn btn-default" id="save">Save</button>
            <img id="loading" src="../../Content/images/ajax-loader.gif" alt="Loading..." style="display: none;"/>
        </form>
    </div>
</div>

<div class="row row-margin">
    <div class="col-lg-8 col-md-8 col-sm-12 co-xs-12 col-lg-offset-2 col-md-offset-2">        
        <table class="table table-bordered table-condensed table-hover table-responsive search-table" id="searchResultTable"></table>        
    </div>
</div>
